@using HelpMyBook.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HelpMyBook</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HelpMyBook", "Index", "Home", new { area = string.Empty }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = string.Empty }, null)</li>

                    <li>@Html.ActionLink("Books", "Index", "Books", new { area = string.Empty }, null)</li>

                    <li>@Html.ActionLink("Downloads", "Downloads", "Books", new { area = string.Empty }, null)</li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Information<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Contacts", "Contacts", "Information", new { area = string.Empty }, null)</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("About us", "AboutUs", "Information", new { area = string.Empty }, null)</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (this.TempData[GlobalConstants.MessageNameError] != null)
        {
            <div class="alert alert-dismissible alert-danger">
                <strong>@TempData[GlobalConstants.MessageNameError]</strong>
            </div>
        }
        @if (this.TempData[GlobalConstants.MessageNameSuccess] != null)
        {
            <div class="alert alert-dismissible alert-success">
                <strong>@TempData[GlobalConstants.MessageNameSuccess]</strong>
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - HelpMyBook</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @* @Scripts.Render("~/bundles/unobtr-jq")*@
    @RenderSection("scripts", required: false)
</body>
</html>
