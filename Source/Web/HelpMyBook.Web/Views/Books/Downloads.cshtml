@model ICollection<HelpMyBook.Web.ViewModels.Books.BookViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.Count <= 0)
{
    <h1>There are no downloadable books!</h1>
}
else
{
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-3">
                <h1 class="text-center">@book.Title</h1>
                @Html.ActionLink("Go to the details of the book", "Details", "Books", new { id = book.Id }, new { @class = "btn btn-primary center-block" })
                <br />
                <hr />
                @Ajax.ActionLink("Download", "DownloadBook", "Files", new { id = book.BookFile.Id }, new AjaxOptions { HttpMethod = "GET" }, new { @class = "btn btn-lg btn-warning center-block" })
            </div>
        }
    </div>
}

