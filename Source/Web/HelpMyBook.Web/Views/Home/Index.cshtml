@model IList<HelpMyBook.Web.ViewModels.Books.BookViewModel>

@{
    ViewBag.Title = "Home Page";
}
<h1 class="text-center">Welcome to Help my book!</h1>
<hr />
@if (Model.Count<=0)
{
    <h2 class="text-info text-center">Currently there are no books</h2>
}
else
{ 
<div>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title text-center">Book of the hour</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                @for (int i = 0; i < Model.Count; i++)
                {
                    var book = Model[i];
                        <div class="col-md-4 modal-content ">
                            <h4 class="text-center">@book.Title</h4>
                            @Html.ActionLink("Details", "Details", "Books", new { id = book.Id }, new { @class = "btn btn-lg btn-info center-block" })
                        </div>
                }
                                     
            </div>
        </div>
    </div>
</div>
}